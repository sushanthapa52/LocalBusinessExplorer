<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LocalBusinessExplorer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LocalBusinessExplorer.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="LocalBusinessExplorer">

    <ShellContent
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
     ContentTemplate="{DataTemplate local:HomePage}"
     Route="HomePage" />

    <ShellContent
     ContentTemplate="{DataTemplate local:SignUpPage}"
     Route="SignUpPage" />

    <ShellContent
    ContentTemplate="{DataTemplate local:BusinessListingsPage} " 
    Route="BusinessListingsPage" />


    <ShellContent
    ContentTemplate="{DataTemplate local:BusinessDetails}"
    Route="BusinessDetails" />

</Shell>
